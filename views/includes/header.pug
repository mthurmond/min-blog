header
	.container(style='max-width: 60em;')
		.pt-4.my-5.text-center
			.mx-auto(style='max-width: 40rem;')
				a.text-decoration-none(href='/')
					div.position-relative
						if photo
							img.rounded-circle(src=photo width='50px' height='50px')
						else
							img.rounded-circle(src=defaultAvatar width='50px' height='50px')
				p.d-inline-block.fs-6.text-uppercase.text-muted.mt-1.blog-name-spacing= name
				if userId 
					.d-inline-block.dropdown
						a.text-decoration-none(href='#' role="button" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-expanded="false")
							svg.ms-1.bi.bi-caret-down-square(xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="#6c757d" viewBox="0 0 20 20")
